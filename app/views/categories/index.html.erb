<% content_for :functional_nav do%>
<li><%= link_to 'Add', new_category_path %></li>
<% end %>
<%= currently_at 'Categories'%>

<h1>Listing categories</h1>

<table id="categories" class="display">
<thead>	
  <tr>
    <th>Sequence</th>
    <th>Name</th>    
  </tr>
</thead>
<tbody>
<% @categories.each do |category| %>
  <tr>
    <td><%= category.sequence %></td>
    <td><%= link_to(category.name, category) %></td>    
  </tr>
<% end %>
</tbody>
</table>
